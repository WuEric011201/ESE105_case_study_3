clc; 
clear;
close all;
%% Question 3 Part 2
% Initialize variables
steps = 4000; % Longer j to have it more stable
R = 100;
L = 100*10^-3;
C = 0.1*10^-6;

A = [1, h/C;
    -h/L, 1-h*R/L];
B = [0; h/L];
Vc_initial = 0; % Initial value of 0s
I_initial = 0;
% Populate the containers
Vin = zeros(steps+1, 1);
x = [Vc_initial , I_initial ; zeros(steps, 2)];
Vin(1, 1) = sin(2*pi*frequencies(1)*h);
for freq = 10: 1: 10000 
    for j = 2:steps
        time = h*j;
        Vin(j, 1) = sin(2 * pi * fre * time);
        x(j, :) = A*(x(j-1, :)')+B*Vin(j-1, :);
    end
    vout = x(:, 2) * R;
    band(freq-10, );
end

%% Graphing the results

figure;
hold on;
plot(t, x(:, 2)*R );
plot(t, Vin);
title("frequency 1");
legend("output", "input");

figure;
hold on;
plot(t, xf2(:, 2)*R);
plot(t, Vin2);
% plot(t, x(:, 2)*R ./ Vin);
title("frequency 2");
legend("output", "input");

figure;
hold on;
plot(t, xf3(:, 2)*R);
plot(t, Vin3);
% plot(t, x(:, 2)*R ./ Vin);
title("frequency 1600Hz Lowpass");
legend("output", "input");

figure;
hold on;
plot(t, xf4(:, 2)*R);
plot(t, Vin4);
% plot(t, x(:, 2)*R ./ Vin);
title("Output voltage and input voltage with input voltage having a 100Hz frequency");
legend("output", "input");

